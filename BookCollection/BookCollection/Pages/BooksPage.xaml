<Page x:Class="BookCollection.Pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookCollection.Pages" xmlns:local1="clr-namespace:BookCollection.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BooksPage">

    <Grid>
        <TextBlock Text="List of your books:" Margin="20 0 0 0"/>
        <StackPanel Margin="20 30 245 20">
            <local1:Book/>
            <local1:Book/>
            <local1:Book/>
            <local1:Book/>
            <local1:Book/>
        </StackPanel>
        <StackPanel Width="200" Margin="310 30 20 292" VerticalAlignment="Center">
            <TextBlock Text="Title"/>
            <TextBox />
            <TextBlock Text="Author"/>
            <TextBox />
        </StackPanel>
        <StackPanel Margin="310,292,20,30">
            <StackPanel Orientation="Horizontal">
                <Button Content="Add"/>
                <Button Content="Delete"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
